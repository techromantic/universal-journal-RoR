<!DOCTYPE html>
<html>
<head>
  <title>Universaljournal</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Lato:100|Roboto:300,300i' %>
 
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>
    <div id="page-content-wrapper" style="margin-left:0;">
    <div class="container">
    <h4 align="center" class="top-nav"><%= image_tag("ujSLEEK.png", :alt => "Join the Universe", height: '100', width: '400') %></h1>
    <nav class="navbar navbar-default" role="navigation">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav">
                <li>
                    <a href="/feed/" class="[  animate  ]">
					    <span> HOME </span>
					    <span class="fa-lg pull-left"><i class="fa fa-globe"></i></span>
				    </a>
				</li>
				<li>
                    <a href="/feed/" class="[  animate  ]">
					    <span> FEED </span>
					    <span class="fa-lg pull-left"><i class="fa fa-globe"></i></span>
				    </a>
				</li>
				    <li>
				        <a href="/entries/new" class="animate">
					    <span class="desc animate"> WRITE </span>
					    <span class="fa-lg pull-left"><i class="fa fa-pencil-square"></i></span>
				        </a>
			        </li>
					<li>
					 <% if logged_in? %>

                        <%= link_to '<span class="desc animate">MY Journal</span><span class="fa-lg pull-left"><i class="fa fa-address-book"></i></span>'.html_safe, user_path(current_user), :class => "animate" %>  
                        
                        <% else %>
                        
                        <%= link_to '<span class="desc animate"> Login </span><span class="fa-lg pull-left"><i class="fa fa-address-book"></i></span>'.html_safe, login_path, :class => "animate" %>
                        
                        <% end %> 
                    </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </nav>
    <span class="input input--kyo">
		                    	<%= form_tag(entries_path, :method => "get", id: "search-form") do %>
		                       <%= text_field_tag :search, params[:search], placeholder: "Search Entries", :class => "input__field input__field--kyo" %>
		                       <% end %> 
		                       <% if !(:search.present?) %>
		                           <p>There are no entries containing the term(s) <%= params[:search] %> .</p>
		                       <% end %>
		                </span>
        <!-- Page Content -->
        
            <div class="container-fluid xyz">
                <div class="row">
                    <div class="col-lg-1">
                    </div>
                    <div class="col-lg-9">
                        <%= yield %>
                    </div>
                   <div class="col-md-2">
                       <% if logged_in? %>
                        Logged in as:
 
                       <b><%= current_user.username %></b>

                        <%= link_to 'Edit Profile', edit_user_path(current_user) %>  
                        <%= link_to 'Log_out', logout_path, method: :delete %>
                        
                        <% else %>
                        
                        <%= link_to 'Log_in', login_path %>
                        
                        <% end %> 
                   </div> 
                </div>
                
                <div class="row">
                   <%= debug(params) if Rails.env.development? %>
                </div> 
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>






  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  






</body>
</html>
