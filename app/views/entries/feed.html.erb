<div class="container-fluid">
     
<h1>
  Popular Journal Entries for
  <%= Time.now.strftime("%m/%d/%Y")%>

</h1>


<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Entryname</th>
      <th>Country</th>
      <th>City</th>
      <th>Content</th>
      <th>Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
            <% @entries.each do |entry| %>
            <div class="media">
          <div class="media-right media-middle">
            <a href="#">
              <span class="glyphicon glyphicon-globe"> </span>
            </a>
          </div>
          <div class="media-body">

          <div class="row">

            <div class="col-md-9">
              <h4 class="media-heading" > 
                <span style="font-size:20px">
                <%= link_to entry.name, entry %></span>
              </h4>

              <div class="media-content">
                <%= entry.content %>
              </div>

            </div>

            <div class="col-md-3">
              <div class="media-info">
                      <span class= "pull-right" style="font-size:12px; color: blue">
                      <% if defined? entry.user.username? %>
                      <%= link_to entry.user.username, user_path(entry.user) %>
                      <% else %>
                      <p>Anonymous</p>
                      <% end %>
                      </span> <br>
                  
                       

                  <span class= "pull-right" style="font-size:10px">
                  <% if defined? entry.country? %>
                    <p> <%= entry.country %>, <%= entry.city %></p>

                  <% elsif defined? entry.user.country %> 
                   <p> <%= entry.user.country %>, <%= entry.user.city %></p></span> 
                  <% else %> 
                  <p>Unknown</p>
                 <% end %>
                   <br>
                       
                       
                      
                  <span class= "pull-right" style="font-size:20px; height:50px; line-height:50px">  <b><%= entry.points %></b>  </span>
             </div>   
            </div>
            


            </div>
            <div class="row">
            <div class="col-md-12">
              <div class="media-info">
                    

                    <span class="pull-right">
                      Posted: <%= time_ago_in_words(entry.created_at) %> ago
                    </span><br>
                    <span class="pull-right"> <%= link_to 'Show', entry %> </span>
              </div>  
             <%= link_to 'Unite', entry_addpoint_path(entry), method: :put, class: "btn btn-xs btn-primary" %>
            </div>
            </div>

          
          
         
            

                 
          </div>
        </div>
         <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path %>

    </div>



