
<h1>Listing Entries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Country</th>
      <th>City</th>
      <th>Content</th>
      <th>Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.name %></td>
          <% if defined? entry.user.username? %>
                      <td><%= entry.user.username? %></td>
                      <% else %>
                      <td>Anonymous</td>
                      <% end %>
          <% if defined? entry.user.country? %>            
                  <td><%= entry.user.country %></td>
                  <td><%= entry.user.city %></td>
                  <% else %> 
                  <td> Unknown Location </td>
                  <% end %> 
        <td><%= entry.content %></td>
        <td><%= entry.points %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path %>
